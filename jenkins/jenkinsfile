pipeline {
    agent any
    tools { nodejs "nodejs" }
    stages {
        stage('Workspace Clean') {
            steps {
                cleanWs()
            }
        }
        
        stage('Git Clone') {
            steps {
                sh """
                   echo ${WORKSPACE}
                   git clone 'https://github.com/leesanghoon94/myapp.git'
                   """
            }
        }
        
        stage('npm Build') {
            steps {
                 sh """
                    cd frontend
                    npm install
                    npm run build
                    """
                }
            }
        }
    }

