pipeline {
    agent any
    tools { nodejs "nodejs"}
    stages {
        stage('Workspace Clean') {
            steps {
              cleanWs()
            }
        }
        stage('git clone') {
            steps {
                sh """
                   echo ${WORKSPACE}
                   git clone 'https://github.com/leesanghoon94/my.git'
                   """
            }
        }
        stage('npm install') {
            steps {
                sh  """
                    cd my/server
                    npm install
                    """
            }
        }
        stage('deploy') {
            steps {
                sh  """
                    ansible-playbook -i inventory playbook.yaml
                    """
            }
        }
    }
}
